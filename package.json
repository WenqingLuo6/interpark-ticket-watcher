{
  "name": "melon-ticket-watcher",
  "version": "0.0.1",
  "description": "멜론티켓 취소표 watcher",
  "scripts": {
    "test": "jest",
    "dev": "nodemon --exec ts-node index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "preview": "npm run build && node dist/index.js",
    "postinstall": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/potados99/melon-ticket-watcher.git"
  },
  "keywords": [],
  "author": "potados99",
  "license": "GPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/potados99/melon-ticket-watcher/issues"
  },
  "homepage": "https://github.com/potados99/melon-ticket-watcher#readme",
  "dependencies": {
    "commander": "^9.0.0",
    "date-fns": "^2.28.0",
    "node-fetch": "^2.6.1"
  },
  "devDependencies": {
    "@types/date-fns": "^2.6.0",
    "@types/jest": "^26.0.22",
    "@types/node": "^14.14.31",
    "@types/node-fetch": "^2.5.10",
    "jest": "^26.6.3",
    "nodemon": "^2.0.7",
    "prettier": "^2.3.2",
    "ts-jest": "^26.5.2",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.2"
  },
  "jest": {
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "testRegex": "\\.test\\.ts$",
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "testEnvironment": "node"
  },
  "prettier": {
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true,
    "bracketSpacing": false,
    "printWidth": 100
  }
}
